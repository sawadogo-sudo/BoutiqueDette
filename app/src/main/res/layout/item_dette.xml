<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="8dp"
    android:backgroundTint="@color/cardBackground">

    <!-- Ligne 1: Nom du client et statut -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:tint="@color/primaryColor"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nom du Client"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvStatut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En cours"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background_status"/>

    </LinearLayout>

    <!-- Ligne 2: Montant -->
    <TextView
        android:id="@+id/tvMontant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 FCFA"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:layout_marginTop="8dp"/>

    <!-- Ligne 3: Date et téléphone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01/01/2024"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"/>

        <ImageView
            android:id="@+id/btnCall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_call"
            android:tint="@color/primaryColor"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+226 XX XX XX XX"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Ligne 4: Description (optionnelle) -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description de la dette"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone"/>

</LinearLayout>