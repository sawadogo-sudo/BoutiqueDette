<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- CardView pour le formulaire -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Titre -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nouvelle Dette"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Client -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Client *"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp" />
                
                <Spinner
                    android:id="@+id/spinnerClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp" />
                
                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description de la dette"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="3"
                    android:layout_marginBottom="12dp" />

                <!-- Montant -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Montant (FCFA) *"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp" />
                
                <EditText
                    android:id="@+id/editTextMontant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="12dp" />

                <!-- Date de la dette -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date de la dette"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp" />
                
                <DatePicker
                    android:id="@+id/datePickerDette"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <!-- Date d'échéance -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date d'échéance"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp" />
                
                <DatePicker
                    android:id="@+id/datePickerEcheance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

                <!-- Statut -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Statut"
                    android:textColor="#212121"
                    android:layout_marginBottom="4dp" />
                
                <Spinner
                    android:id="@+id/spinnerStatut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Annuler"
                android:textColor="#FFFFFF"
                android:background="#9E9E9E" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Enregistrer"
                android:textColor="#FFFFFF"
                android:background="#3F51B5" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>