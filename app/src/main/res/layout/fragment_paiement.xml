<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- En-tÃªte avec total et bouton d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTotalAujourdhui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total aujourd'hui: 0 FCFA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btnNouveauPaiement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Paiement"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>

    <!-- Message vide -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aucun paiement aujourd'hui"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"/>

    <!-- Liste des paiements -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPaiements"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>