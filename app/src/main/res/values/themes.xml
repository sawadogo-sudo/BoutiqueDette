<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème principal AVEC ActionBar -->
    <style name="Theme.BoutiqueDette" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF4081</item>
        <item name="colorSecondaryVariant">#F50057</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
    </style>

    <!-- Thème SANS ActionBar (pour MainActivity avec Toolbar personnalisée) -->
    <style name="Theme.BoutiqueDette.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <item name="colorSecondary">#FF4081</item>
        <item name="colorSecondaryVariant">#F50057</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>